{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/service-core/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/service-core/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/service-core",
  "projects": {
    "service-core": {
      "type": "application",
      "root": "apps/service-core",
      "entryFile": "main",
      "sourceRoot": "apps/service-core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/service-core/tsconfig.app.json",
        "assets": [
          {
            "include": "assets/templates/**/*.{hbs,xlsx,csv}",
            "outDir": "dist/apps/service-core"
          }
        ],
        "watchAssets": true
      }
    },
    "service-user": {
      "type": "application",
      "root": "apps/service-user",
      "entryFile": "main",
      "sourceRoot": "apps/service-user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/service-user/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "db": {
      "type": "library",
      "root": "libs/db",
      "entryFile": "index",
      "sourceRoot": "libs/db/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db/tsconfig.lib.json"
      }
    },
    "js-report": {
      "type": "library",
      "root": "libs/js-report",
      "entryFile": "index",
      "sourceRoot": "libs/js-report/src",
      "compilerOptions": {
        "tsConfigPath": "libs/js-report/tsconfig.lib.json"
      }
    }
  }
}